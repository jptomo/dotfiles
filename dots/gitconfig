[include]
	path = ~/.gitconfig.include

[core]
	symlinks = false
	autocrlf = false
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	pager = 

[color]
	ui = auto
	diff = auto
	status = auto
	diff = auto
	branche = auto

[status]
	short = true
	branch = true

[pack]
	packSizeLimit = 2g

[help]
	format = man

[log]
	date = iso

[diff]
	color-words = true

[format]
	pretty = format:%C(yellow)%h %C(green)%cd %C(blue)%an%C(red)%d %C(reset)%s%n

[http]
	sslVerify = false

[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line
	generic = ^F move-page-down
	generic = ^B move-page-up

[alias]
	co = checkout
	ci = commit
	st = status
	id = log -1 HEAD^ --pretty=format:"%H%n"
	diffw = diff --color-words
	gl = log --graph
	graph = log --graph
