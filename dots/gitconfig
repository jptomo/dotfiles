[include]
	path = ~/.gitconfig.include

[core]
	symlinks = false
	autocrlf = false
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	pager = 

[color]
	ui = auto
	diff = auto
	status = auto
	diff = auto
	branche = auto

[status]
	short = true
	branch = true

[pack]
	packSizeLimit = 2g

[help]
	format = html

[diff]
	color-words = true
	; external = git_diff_wrapper

[http]
	sslVerify = false

[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line
	generic = ^F move-page-down
	generic = ^B move-page-up

[alias]
	co = checkout
	ci = commit
	st = status
	id = log -1 HEAD^ --pretty=format:"%H%n"
	wdiff = diff --color-words
	graph = log --graph --decorate --oneline
	mergeff = merge --ff --ff-only
